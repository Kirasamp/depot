<div class="cart_title">Your Cart</div>
<table>
	<%= render(cart.line_items) %>
	
	<tr class="total_line">  
		<td colspan="2">Total</td>
		<td class="total_cell"><%= euro(cart.total_price) %></td>
	</tr>

</table>

<table>
	<tr>
		<td><%= button_to 'Empty cart', cart, method: :delete,
			confirm: "Are you sure?" %></td>
	</tr>
</table>